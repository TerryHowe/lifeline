<h1>New event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :cols=>40, :rows=>8%>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.calendar_date_select :start_date , :time => true %>
  </p>
  <p>
  <%= f.label :end_date %><br />
  <%= f.datetime_select :end_date %>
  </p>
  <p>
    <%= f.label :private %><br />
    <%= f.check_box :private %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
