<div id="event" "ui-widget-content" style="padding:15px;background:#fff;">
  <% form_remote_for @event do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <p>
      <%= f.submit "Save", :class => "ui-button ui-state-hover ui-corner-all" %>
      <%= link_to_remote "Cancel", :url => new_event_path %>
      <%= link_to_function "Show/Hide Optional Details",
        "$('optional').toggle()", :id => "optional_toggle" %>
    </p>
  <% end %>
</div>
