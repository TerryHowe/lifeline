<div id="event">
  <div class="ui-widget-content" style="padding:15px;background:#fff;">
  <% form_remote_for @event do |f| %>
    <div>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :start_date %><br/>
      <%= f.calendar_date_select :start_date, :popup => "force", 
          :time => false, :buttons => false %>
    </p>
    <p>
      <%= f.label :end_date %><br/>
      <%= f.calendar_date_select :end_date, :popup => "force",
          :time => false, :buttons => false %>
    </p>
    <div id="optional" style="background:#eee;padding:5px;display:none;"
      class="ui-widget-content ui-corner-all">
    <b>Optional Details</b>
    <p>
      <%= f.label :content, "Details" %><br/>
      <%= f.text_area :content, :rows => 2 %>
    </p>
    <p>
      <%= f.label :private, "Make event private" %>
      <%= f.check_box :private %>
    </p>
    </div>
    <p >
      <%= f.submit " Add New Event", 
        :class => "ui-button ui-state-hover ui-corner-all" %>
      <%= link_to_function "Show/Hide Optional Details",
        "$('optional').toggle()", :id => "optional_toggle" %>
    </p>
    </div>

  <% end %>
    </div>
</div>
