<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :start_date %><br/>
  <%= f.calendar_date_select :start_date, :popup => "force",
    :time => false, :buttons => :false %>
</p>
<p>
  <%= f.label :end_date %><br/>
  <%= f.calendar_date_select :end_date, :popup => "force", :time => false %>
</p>

<div id="optional" style="background:#eee;padding:5px;display:none;"
  class="ui-widget-content ui-corner-all">
  <b>Optional Details</b>
  <p>
    <%= f.label :content, "Details" %><br/>
    <%= f.text_area :content, :rows => 2 %>
  </p>
  <p>
   <%= f.label :private, "Make event private" %>
   <%= f.check_box :private %>
  </p>
</div>
